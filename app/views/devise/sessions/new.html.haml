.container
  %h2 ログイン
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .field
      = f.label :メールアドレス
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", class: 'item'
    .field
      = f.label :パスワード
      %br/
      = f.password_field :password, autocomplete: "current-password", class: 'item'
    - if devise_mapping.rememberable?
      .field
        = f.check_box :remember_me
        = f.label :'ログイン情報を記憶する'
    .actions
      = f.submit "ログイン", class: 'btn-primary'
  = render "devise/shared/links"
